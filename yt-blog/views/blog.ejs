<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Blog</title>
</head>
<body>
    <%- include('./partials/navbar') %>
   
 
        <div class="container mt-4">
           <h1><%= blog.title %></h1>
           <img src="<%= blog.coverImageURL %>" width="400px" height="400px"/>
           <pre><%= blog.body %></pre>   
        </div>
      
        <div class="container mt-4">
          <img src="<%= blog.createdBy.profileImageURL %>" width="50px">
<%= blog.createdBy.fullName %> 
         </div>
   <div class="container mt-3">
    <h1>Comments (<%= comment.length %>)</h1>
    <% comment.forEach(comm =>{ %>
        <div>  <img src="<%= comm.createdBy.profileImageURL%>" width="50px">
           <%= comm.createdBy.fullName %>:<pre><%= comm.content %></pre> </div>
         <% }) %>
       </div>
    
    <% if (locals.user) { %>
    <form action="/blog/comment/<%= blog._id %>" method="post">

     <input type="text"  name="content" class="form-control" placeholder="enter comment"/>
    <button class="btn btn-sm btn-primary" type="submit">Submit</button>
    </form>

    

    <% } %>    
   
    <%- include('./partials/script') %>
</body>
</html>
